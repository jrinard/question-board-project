{{#if updatePostForm}}
  <h4>Update Question</h4>
  <div id="new-post-form" class="well">
    <form>
      <div class="form-group">
        <label for="type">Question</label>
        {{input class="form-control" value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="type">Author</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="type">Notes</label>
        {{input class="form-control" value=note id="note"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input class="form-control" value=image id="image"}}
      </div>
      <button class="btn btn-primary"{{action 'update' post}}>Save</button>
      <button class="btn btn-warning"{{action 'updateFormHide'}}>Cancel</button>
    </form>
  </div>
  {{else}}
  <button class="btn btn-primary"{{action 'updatePostForm'}}>Update Question</button>
{{/if}}
