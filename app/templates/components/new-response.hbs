{{#if addNewResponse}}
  <h4>New Answer</h4>
  <div id="new-post-form" class="well">
    <form>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{input class="form-control" value=answer id="answer"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author"}}
      </div>

      <button class="btn btn-primary" {{action 'saveResponse'}}>Save</button>
      <button class="btn btn-warning"{{action 'responseFormHide'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'responseFormShow'}}>New Answer</button>
{{/if}}
